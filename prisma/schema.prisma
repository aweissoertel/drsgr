generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model GroupRecommendation{
  id                  String      @id @default(auto()) @map("_id") @db.ObjectId
  sessionCode         String      @unique
  userVotes           UserVote[]
  votingEnded         Boolean
  aggregationResults  AggregationResult[]
}

model UserVote {
  id                String              @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  recommendation    GroupRecommendation @relation(fields: [recommendationId], references: [id])
  recommendationId  String              @db.ObjectId
  preferences       Attributes
}

model AggregationResult {
  id                String              @id @default(auto()) @map("_id") @db.ObjectId
  recommendation    GroupRecommendation @relation(fields: [recommendationId], references: [id])
  recommendationId  String              @db.ObjectId
  method            String
  rankedCountries   RankResult[]
}

model Country {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  u_name      String
  name        String
  region      String
  attributes  Attributes
}

type RankResult {
  u_name          String
  rank            Int
  totalScore      Float
  attributeScore  Attributes
}

type Attributes {
  nature        Float
  architecture  Float
  hiking        Float
  wintersports  Float
  beach         Float
  culture       Float
  culinary      Float
  entertainment Float
  shopping      Float
}
